# Environment configuration for feedback worker

# Kafka configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_FEEDBACK_TOPIC=feedback_queue
KAFKA_GROUP_ID=feedback_worker_group

# MongoDB configuration (same as backend)
USE_MONGO=1
MONGODB_URI=mongodb://bbr:bbrpass@mongo:27017/?directConnection=true
BBR_DB_NAME=bbr

# Worker configuration
WORKER_POLL_TIMEOUT=1.0
WORKER_MAX_POLL_RECORDS=10
WORKER_RETRY_ATTEMPTS=3
WORKER_RETRY_DELAY=5

# Logging
LOG_LEVEL=INFO